<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"
    tools:context=".UpdateMemberActivity">

    <EditText
        android:id="@+id/etMemberId"
        android:layout_width="377dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:hint="Member ID"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="349dp" />


    <EditText
        android:id="@+id/etMemberAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        android:hint="Address"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="208dp" />

    <EditText
        android:id="@+id/etMemberName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Member Name"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="288dp" />

    <EditText
        android:id="@+id/etMemberPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Phone Number"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="456dp" />

    <EditText
        android:id="@+id/etMemberNoDues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="No Paid Dues"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="123dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="636dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
